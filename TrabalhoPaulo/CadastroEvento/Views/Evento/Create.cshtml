@model CadastroEvento.ViewModels.EventoViewModel

@{
    ViewData["Title"] = "Cadastro de Evento";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-6">
        <form asp-controller="Evento" asp-action="Salvar" method="post">
            
            @* Garante que as mensagens de erro de validação do modelo sejam exibidas *@
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group mb-3">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="NumeroParticipantes" class="control-label"></label>
                <input asp-for="NumeroParticipantes" class="form-control" type="number" />
                <span asp-validation-for="NumeroParticipantes" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="Data" class="control-label"></label>
                <input asp-for="Data" class="form-control" type="date" />
                <span asp-validation-for="Data" class="text-danger"></span>
            </div>

            <div class="form-group form-check mb-3">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ativo" /> @Html.DisplayNameFor(model => model.Ativo)
                </label>
            </div>

            <div class="form-group">
                <input type="submit" value="Salvar Evento" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

@* Seção para habilitar a validação do lado do cliente (client-side) *@
@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}